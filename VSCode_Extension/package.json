{
  "name": "mtatd",
  "displayName": "MTA:SA Lua Debugger",
  "description": "MTA:SA Test and Debug Framework",
  "version": "0.0.1",
  "publisher": "jusonex",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.startMTA"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.startMTA",
        "title": "MTA:SA: Start Debug Server"
      }
    ],
    "debuggers": [
      {
        "type": "mtasa",
        "label": "MTA:SA Debug",
        "program": "./out/src/mtasaDebug.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "serverpath"
            ],
            "properties": {
              "serverpath": {
                "type": "string",
                "description": "The MTA:SA server path (without 'MTA Server.exe')"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "mtasa",
            "request": "launch",
            "name": "Launch MTA:SA",
            "serverpath": "C:\\Program Files (x86)\\MTA San Andreas 1.5\\server"
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "lua"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32",
    "@types/request": "^0.0.42",
    "vscode-debugadapter-testsupport": "^1.18.0"
  },
  "dependencies": {
    "ps-node": "^0.1.6",
    "request": "^2.81.0",
    "vscode-debugadapter": "^1.18.0",
    "vscode-debugprotocol": "^1.18.0"
  }
}
